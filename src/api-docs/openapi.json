{
  "openapi": "3.0.0",
  "info": {
    "title": "LED Clock REST API",
    "version": "1.6.1",
    "description": "REST API voor ESP32 LED Clock. Bevat ping, reboot, tijdzone endpoints en een compacte tijdzones-lijst."
  },
  "servers": [
    {
      "url": "http://{host}",
      "description": "ESP32 device",
      "variables": {
        "host": {
          "default": "ledclock.local"
        }
      }
    }
  ],
  "paths": {
    "/api/ping": {
      "get": {
        "tags": ["Health"],
        "summary": "Ping het device",
        "description": "Retourneert een pong met enkele statusvelden, voor health/latency checks.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["pong", "now", "uptime_ms"],
                  "properties": {
                    "pong": { "type": "boolean", "example": true },
                    "now": {
                      "type": "integer",
                      "format": "int64",
                      "description": "Unix epoch (ms)",
                      "example": 1733246400000
                    },
                    "uptime_ms": {
                      "type": "integer",
                      "format": "int64",
                      "example": 52341
                    },
                    "heap_free": {
                      "type": "integer",
                      "description": "Vrije heap in bytes",
                      "example": 187264
                    },
                    "wifi_mode": {
                      "type": "string",
                      "description": "Huidige Wi-Fi modus",
                      "example": "AP"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/system/reboot": {
      "post": {
        "tags": ["System"],
        "summary": "Herstart het apparaat",
        "description": "Start de ESP32 opnieuw op.",
        "responses": {
          "200": {
            "description": "Herstart wordt uitgevoerd",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "rebooting": { "type": "boolean", "example": true },
                    "message": {
                      "type": "string",
                      "example": "Rebooting system..."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/timezone": {
      "get": {
        "tags": ["Time"],
        "summary": "Haal de ingestelde tijdzone op",
        "description": "Geeft de huidige IANA tijdzone terug plus offsets.",
        "responses": {
          "200": {
            "description": "Tijdzone-informatie ontvangen",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["timezone", "gmtoffset", "dstoffset"],
                  "properties": {
                    "timezone": { "type": "string", "example": "Europe/Amsterdam" },
                    "gmtoffset": {
                      "type": "integer",
                      "description": "Vaste offset t.o.v. UTC",
                      "example": 3600
                    },
                    "dstoffset": {
                      "type": "integer",
                      "description": "DST offset",
                      "example": 3600
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Time"],
        "summary": "Stel de tijdzone in",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["timezone"],
                "properties": {
                  "timezone": {
                    "type": "string",
                    "description": "Nieuwe tijdzone",
                    "example": "Europe/Amsterdam"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tijdzone ingesteld",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": {
                      "type": "string",
                      "example": "Timezone updated successfully"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Time"],
        "summary": "Verwijder de ingestelde tijdzone",
        "description": "Reset naar standaardtijdzone.",
        "responses": {
          "200": {
            "description": "Tijdzone verwijderd",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": {
                      "type": "string",
                      "example": "Timezone cleared; using default"
                    },
                    "timezone": { "type": "string", "example": "Etc/UTC" },
                    "gmtoffset": { "type": "integer", "example": 0 },
                    "dstoffset": { "type": "integer", "example": 0 }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/timezones": {
      "get": {
        "tags": ["Time"],
        "summary": "Lijst van tijdzones",
        "responses": {
          "200": {
            "description": "Tijdzones ontvangen",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "timezones": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/themes": {
      "get": {
        "tags": ["Themes"],
        "summary": "Lijst beschikbare thema's",
        "responses": {
          "200": {
            "description": "Thema's",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id", "name", "is_default", "is_active"],
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" },
                      "is_default": { "type": "boolean" },
                      "is_active": { "type": "boolean" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/theme": {
      "get": {
        "tags": ["Themes"],
        "summary": "Haal actief thema op",
        "responses": {
          "200": {
            "description": "Actief thema",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["active_id", "active_name", "is_default", "has_saved_override"],
                  "properties": {
                    "active_id": { "type": "string" },
                    "active_name": { "type": "string" },
                    "is_default": { "type": "boolean" },
                    "has_saved_override": { "type": "boolean" },
                    "saved_override_id": { "type": "string", "nullable": true }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Themes"],
        "summary": "Stel thema in",
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Thema ingesteld",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["ok", "active_id", "active_name", "is_default"],
                  "properties": {
                    "ok": { "type": "boolean" },
                    "active_id": { "type": "string" },
                    "active_name": { "type": "string" },
                    "is_default": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Themes"],
        "summary": "Verwijder thema override",
        "responses": {
          "200": {
            "description": "Override verwijderd",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["ok", "active_id", "active_name", "is_default"],
                  "properties": {
                    "ok": { "type": "boolean" },
                    "active_id": { "type": "string" },
                    "active_name": { "type": "string" },
                    "is_default": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/powersave": {
      "get": {
        "tags": ["Powersave"],
        "summary": "Haal de huidige powersave-modus op",
        "responses": {
          "200": {
            "description": "Status ontvangen",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "enabled": { "type": "boolean", "example": true }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Powersave"],
        "summary": "Schakel powersave in/uit",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["enabled"],
                "properties": {
                  "enabled": { "type": "boolean", "example": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Powersave gewijzigd",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "enabled": { "type": "boolean", "example": true }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Powersave"],
        "summary": "Reset powersave-modus naar standaardwaarde",
        "description": "Zet powersave uit en reset naar default. Idempotent.",
        "responses": {
          "200": {
            "description": "Powersave is uitgeschakeld",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "enabled": { "type": "boolean", "example": false },
                    "message": {
                      "type": "string",
                      "example": "Powersave disabled and reset to default"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "tags": [
    { "name": "Health", "description": "Status en health-checks" },
    { "name": "System", "description": "Systeembeheer en device-acties" },
    { "name": "Time", "description": "Tijdzone-instellingen en tijdinformatie" },
    { "name": "Themes", "description": "Thema-overzicht en selectie" },
    { "name": "Powersave", "description": "Energiebesparing / powersave functionaliteit" }
  ]
}
